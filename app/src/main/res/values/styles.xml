<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--=================-->
    <!--Widgets.TabLayout-->
    <!--=================-->
    <style name="Widget.Tadami.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabMinWidth">75dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <!--========-->
    <!--Toolbars-->
    <!--========-->
    <style name="Theme.Tadami.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <!--===========-->
    <!--AlertDialog-->
    <!--===========-->
    <style name="ThemeOverlay.Tadami.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:layout">@layout/m3_alert_dialog</item>
        <item name="dialogCornerRadius">@dimen/m3_alert_dialog_corner_size</item>
    </style>

    <!--===============-->
    <!--Text Appearance-->
    <!--===============-->
    <style name="TextAppearance.Widget.Button" parent="TextAppearance.Material3.TitleSmall" />

    <style name="TextAppearance.Widget.Menu" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.Tadami.Preference.Secondary" parent="TextAppearance.Material3.BodySmall" />

    <style name="TextAppearance.Tadami.SectionHeader" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Tadami.Color" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!--=======================-->
    <!--Widgets.MaterialDivider-->
    <!--=======================-->
    <style name="Widget.Tadami.MaterialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/divider_default</item>
    </style>

</resources>